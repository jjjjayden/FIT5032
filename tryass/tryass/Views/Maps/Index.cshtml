@model IEnumerable<tryass.Models.Map>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/Glassshow")
<h2>Map</h2>
<div id="map" style="height:300px">
</div>
<br />
<p>
    @Html.ActionLink("Create New", "Create", "Locations", new { @class = "btn btn-primary" })
</p>

<table class="table glass-table" id="userTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="coordinates">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="description">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="latitude">
                    @Html.DisplayFor(modelItem => item.Latitude)
                </td>
                <td class="longitude">
                    @Html.DisplayFor(modelItem => item.Longitude)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "custom-btn" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "custom-btn" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "custom-btn" })
                </td>
            </tr>
        }
    </tbody>
</table>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/datable")

@section scripts{
    <script>
        $(document).ready(function () {
            let table = new DataTable('#userTable');
        }
        )

    </script>
    @Scripts.Render("~/bundles/mapbox")
}
