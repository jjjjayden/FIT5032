@{
    ViewBag.Title = "Annotations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Image</th>
            <th>Comment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserId</td>
                <td><img src="@item.XrayImage.ImageUrl" alt="X-ray Image" width="100"></td>
                
                <td>@item.Comment</td>
                <td>
                    <a href="@Url.Action("DownloadImage", new { imageUrl = item.XrayImage.ImageUrl })" download class="btn btn-sm btn-primary mt-2">Download Image</a>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm mr-2" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm mr-2" })
                    @Html.ActionLink("Add Comment", "AddComment", new { id = item.Id }, new { @class = "btn btn-info btn-sm mr-2" })
                    @Html.ActionLink("Download As PDF", "DownloadReport", new { id = item.Id, format = "pdf" }, new { @class = "btn btn-info btn-sm mr-2" })
                    @Html.ActionLink("Download As Word", "DownloadReport", new { id = item.Id, format = "word" }, new { @class = "btn btn-info btn-sm mr-2" })
                </td>
            </tr>
        }
    </tbody>
</table>
